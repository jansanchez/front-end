/**
* Layout Module
* @class layout
* @module css-architecture
*/

@import "config/config.stylus"
@import "core/mixin.stylus"

/*!Common Module*/
@import "application/common/common.stylus"


header
	background none repeat scroll 0 0 headerColor
	border-color borderColor
	border-style solid
	border-width 0 0 1px 0
	height 110px - 15px
	padding 15px 0 0 0
	h1
		font-size 0
		line-height 0
		margin 0
		width 156px
		float left
		img
			display block

#main-menu
	clear: both;
	height: 39px;
	list-style: none outside none;
	padding 10px 0 0 0
	li
		float: left;
		padding: 0 10px;

footer
	background none repeat scroll 0 0 footerColor
	border-color borderColor
	border-style solid
	border-width 1px 0 0 0
	height 431px
	padding 10px 0 0 0

	.visit-also
		color textColor2
		float left
		font 400 $FONT_SIZE/$LINE_HEIGHT arial
		padding-top 6px
		width 85px
	.visit-also-list
		float left
		list-style none outside none
		margin 0
		width $WIDTH_PAGE - 85px
		li
			border-right 1px solid textColor2
			float left
			line-height 12px
			margin-top 6px
			padding 0 5px
			a
				font 400 $FONT_SIZE/$LINE_HEIGHT arial
				text-decoration none
		.last
			border medium none

.btnRegister
	getIconSet(btnRegister)
