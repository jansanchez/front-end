/**
* General Module
* @class general
* @module css-architecture
*/

body
	background none repeat scroll 0 0 bodyColor
	color textColor2
	font 400 $FONT_SIZE/$LINE_HEIGHT arial
	margin 0
a
	color linkColor
	text-decoration underline
	outline 0 !important
	&:hover
		color hoverColor
p
	margin 0 0 10px
ul
	margin 0 0 10px
	padding 0
input[type="text"]
	background #FFF
	border-color #989898 #E7E7E7 #E7E7E7
	border-style solid
	border-width 1px
	color #000
	font 13px/16px Arial,sans-serif
	padding 2px 4px
	width 190px
input:-moz-placeholder
	color #888
select
	color #000
	display block
	font 12px/19px Arial,sans-serif
	height 22px
	padding 1px
	width 200px
select[disabled]
	background #CCC
	color #888
option
	border-top 1px solid #DDD
	overflow hidden
	padding 2px 5px
	vertical-align middle
h1,h2,h3
	margin 0 0 15px
	font-size 24px
	line-height 20px