/**
* modulo promociones
* @submodule promociones
* @main default
*/


/*lo reutilizable del sidebar debe ir a una hoja general*/
.sidebar
	h3
		border-color borderColor2
		border-style solid
		border-width 0px 0px 1px 0px
		padding 0 0 14px 0
	.anuncio
		word-wrap break-word
		padding 5px 0 0
		a
			text-decoration none
		.demo-anuncio
			font-family arial
			border-color borderColor2
			border-style solid
			border-width 1px
			height 105px		
			margin 0 0 10px;
			padding 6px
			a
				display: block;
				float: left;
				font-size 11px
				color textColor5
				padding 0 0 0 5px
				text-decoration underline
				&:hover
					color linkColor
			.title
				color textColor5
				font-size 15px
				font-weight 700
				line-height 14px
				float: left;
			p
				color textColor6
				float: left;
				font-size: 11px;
				margin: 0;
				padding: 0 0 0 5px;
				width: 210px;
				display block
			.logo-small
				height: 65px;
				margin: 15px 0 0;
	.conoce
		padding 5px
		background bgTipColor
		setIconSet()
		setPosition(conoce)

.soloTexto
	width 98% !important
	padding: 0 0 0 5px;

