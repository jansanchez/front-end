/**
* Button Module
* @class Button
* @module css-architecture
*/

.btn
	background-color #227FE7
	background-image -ms-linear-gradient(top, #227FE7, #19559B)
	background-image -webkit-gradient(linear, 0 0, 0 100%, from( #227FE7), to(#19559B))
	background-image -webkit-linear-gradient(top, #227FE7, #19559B)
	background-image -o-linear-gradient(top, #227FE7,#19559B)
	background-image linear-gradient(to bottom, #227FE7, #19559B)
	background-image -moz-linear-gradient(to bottom, #227FE7,#19559B )
	background-image unquote("url(data:image/svg+xml;base64,)")
	border-color #227FE7 #175498 #195EAC
	border-image none
	border-radius 4px
	border-style solid
	border-width 1px
	box-shadow 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05)
	*border none
	color #FFF
	display inline-block
	*display inline
	font 400 15px/17px arial
	padding 7px 16px
	text-decoration none
	text-shadow -1px 1px 1px #251D1D
	transition background-position 0.1s linear
	vertical-align middle
	&:hover
		background #19559B
		background-image -ms-linear-gradient(top, #19559B, #217DE4)
		background-image -webkit-gradient(linear, 0 0, 0 100%, from( #19559B), to(#217DE4))
		background-image -webkit-linear-gradient(top, #19559B, #217DE4)
		background-image -o-linear-gradient(top, #19559B,#217DE4)
		background-image linear-gradient(top, #19559B, #217DE4)
		background-image -moz-linear-gradient(top, #19559B,#217DE4 )
		background-image unquote("url(data:image/svg+xml;base64,)")
		border-color #195EAC #175498 #227FE7
.btn-large
	font-size 18px
	line-height 20px
	*line-height 29px
	*padding 0 16px
	width 148px
.btn-smedium
	font-size 17px
	line-height 17px
	*line-height 27px
	padding 8px 20px
	*padding 0 20px