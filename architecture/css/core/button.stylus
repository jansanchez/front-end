/**
* Button Module
* @class Button
* @module css-architecture
*/

.btn
	background-color #FF0000
	background-image -ms-linear-gradient(top, #FF0000, #E60000)
	background-image -webkit-gradient(linear, 0 0, 0 100%, from( #FF0000), to(#E60000))
	background-image -webkit-linear-gradient(top, #FF0000, #E60000)
	background-image -o-linear-gradient(top, #FF0000,#E60000)
	background-image linear-gradient(to bottom, #FF0000, #E60000)
	background-image -moz-linear-gradient(to bottom, #FF0000,#E60000 )
	background-image unquote("url(data:image/svg+xml;base64,)")
	border-color #E60000
	border-image none
	border-radius 4px
	border-style solid
	border-width 1px
	*border none
	color #FFF
	display inline-block
	*display inline
	font 700 16px/18px 'century',arial
	padding 7px 16px
	text-decoration none
	transition background-position 0.1s linear
	vertical-align middle
	&:hover
		background #E60000
		background-image -ms-linear-gradient(top, #E60000, #FF0000)
		background-image -webkit-gradient(linear, 0 0, 0 100%, from( #E60000), to(#FF0000))
		background-image -webkit-linear-gradient(top, #E60000, #FF0000)
		background-image -o-linear-gradient(top, #E60000,#FF0000)
		background-image linear-gradient(top, #E60000, #FF0000)
		background-image -moz-linear-gradient(top, #E60000,#FF0000 )
		background-image unquote("url(data:image/svg+xml;base64,)")
		border-color #FF0000
		color #FFF
.btn-large
	font-size 18px
	line-height 20px
	*line-height 29px
	*padding 0 16px
	width 148px
.btn-smedium
	font-size 17px
	line-height 17px
	*line-height 27px
	padding 8px 20px
	*padding 0 20px